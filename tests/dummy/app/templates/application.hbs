<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-header">
                <h1>Including Morris charts in your project</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            {{morris-charts type="Area" data=data xKey="y" yKeys=yKeys labels=labels resize=true}}
            {{morris-charts type="Line" data=data xKey="y" yKeys=yKeys labels=labels resize=true}}
            {{morris-charts type="Bar" data=data xKey="y" yKeys=yKeys labels=labels resize=true}}
            {{morris-charts type="Donut" data=dataDonut resize=true}}
        </div>
    </div>
</div>
<div class="container">
    {{morris-charts type="Area" data=data xKey="y" yKeys=yKeys labels=labels resize=true}}
    {{morris-charts type="Line" data=data xKey="y" yKeys=yKeys labels=labels resize=true}}
    {{morris-charts type="Bar" data=data xKey="y" yKeys=yKeys labels=labels resize=true}}
    {{morris-charts type="Donut" data=dataDonut resize=true}}
</div>
